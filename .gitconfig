[user]
	name = Andreas Bj√§rlestam 
	email = bjarlestam@gmail.com
[core]
	editor = vim 
	autocrlf = input
	excludesfile = /Users/bjarlestam/.gitignore
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  purge = clean -f -d
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[push]
	default = current
[url "https://"]
	insteadOf = git://
[credential]
	helper = osxkeychain
